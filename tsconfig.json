{
  "compilerOptions": {
    "target": "esNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["mocha", "node"],
    "typeRoots": ["scripts/types", "node_modules/@types", "typechain-types"],
  },
  "include": ["scripts/**/*", "test/**/*", "typechain-types/**/*"]
}
